<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <link href="css/styles.css" rel="stylesheet" type="text/css">
  </head>

  <body>
    <div class="container">
      <h1>Movie Fight<h1>

      <a href="/logout">Logout</a><br />
      <div id = "video">
        <video width="320" height="240" controls>
          <source src="movie.mp4" type="video/mp4">
        </video>
      </div>

      <h1>Get a Movie Battle Going</h1>
      <form id="signup" action="/actors" method="post">
        <input type="text" placeholder="Choose your 1st Actor" name="firstactor" required="">
        <input type="text" placeholder="Choose your 2nd Actor" name = "secondactor"required="">
        <button type="submit">Submit</button>
      </form>

      <h1><%= @winner %> </h1>

    </div>
  </body>
</html>
